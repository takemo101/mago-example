{
  "php.validate.executablePath": ".devbox/nix/profile/default/bin/php",
  "php.debug.executablePath": ".devbox/nix/profile/default/bin/php",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  }
}
